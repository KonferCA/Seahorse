{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd frontend && npm install --legacy-peer-deps && NODE_ENV=production npm run build",
  "installCommand": "cd frontend && npm install --legacy-peer-deps",
  "outputDirectory": "frontend/.next",
  "regions": ["sfo1"],
  "env": {
    "NEXT_PUBLIC_NETWORK_ID": "testnet",
    "NEXT_PUBLIC_GOOGLE_CLIENT_ID": "your-client-id"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}